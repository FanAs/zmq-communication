{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "./dist",
        "sourceMap": true,
        "inlineSources": false,
        "noImplicitReturns": true,
        "baseUrl": "src",
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}