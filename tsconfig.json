{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "build",
        "declaration": true,
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types"]
    },

    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "build"]
}
